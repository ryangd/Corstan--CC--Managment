<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="325dp"
    android:layout_height="45dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/ccBlue"
    app:cardElevation="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bookedStaffCardProfilePicture"
            android:layout_width="45dp"
            android:layout_height="45dp"

            android:layout_alignParentTop="true"

            android:layout_marginTop="2dp"

            android:src="@drawable/profile">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/bookedStaffCardUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:layout_alignLeft="@id/bookedStaffCardProfilePicture"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="2dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:hint="Name"/>

        <TextView
            android:id="@+id/bookedStaffCardUserPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:layout_alignLeft="@id/bookedStaffCardProfilePicture"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="21dp"
            android:hint="Position"
            android:textSize="15sp"
            android:textStyle="bold|italic" />


        <Button
            android:id="@+id/bookedStaffCardRemoveFromDayB"
            android:layout_width="121dp"

            android:layout_height="18dp"
            android:textSize="10sp"
            android:layout_marginTop="3dp"


            android:layout_marginStart="200dp"
            android:layout_marginLeft="1dp"

            android:background="@android:color/holo_red_light"
            android:clickable="true"
            android:shadowColor="#00948E8E"
            android:shadowRadius="5"
            android:text="Remove From Day" />

        <Button
            android:id="@+id/bookedStaffCardUpdateCallTimeB"
            android:layout_width="121dp"
            android:layout_height="18dp"
            android:layout_marginTop="25dp"


            android:layout_marginStart="200dp"
            android:layout_marginLeft="0dp"

            android:background="@android:color/holo_green_dark"
            android:clickable="true"
            android:shadowColor="#00948E8E"
            android:shadowRadius="5"
            android:text="Update Call Time"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/bookedStaffCardCallTimeEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="26dp"
            android:layout_marginRight="127.5dp"
            android:background="@drawable/inputs"
            android:textAlignment="center"
            android:hint=" Call Time "

            android:textSize="12sp"


            android:textStyle="bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>







