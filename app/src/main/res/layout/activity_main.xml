<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/add_day_photos"
        android:layout_width="wrap_content"
        android:layout_height="70dp"

        android:layout_below="@+id/facebook_signin_button"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="25dp"

        android:background="@android:color/white"
        android:foregroundGravity=""
        app:srcCompat="@drawable/ic_corstan_ot_offical">

    </ImageView>




    <ImageView
        android:id="@+id/loginimageView2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/ic_green_dot_logo__green_dot_name" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_below="@+id/loginimageView2"
        android:layout_marginTop="8dp"
        android:background="@drawable/inputs"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_below="@+id/login_email"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/password"
        />

    <Button
        android:id="@+id/login_button"
        android:layout_width="340dp"
        android:layout_height="36dp"
        android:layout_below="@+id/login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_377x144_cc_purple"
        android:shadowColor="#00948E8E"
        android:shadowRadius="5"
        android:text="Login"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/register_account_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:foregroundGravity="center_vertical"
        android:text="Don't have an Account? Sign up here!"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password"

        android:layout_centerInParent="true"
        android:layout_marginTop="105dp"
        android:gravity="center_horizontal"
        android:text="or Login With" />

    <ImageView
        android:id="@+id/google_signin_button"
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:layout_below="@+id/facebook_signin_button"

        android:layout_alignEnd="@+id/facebook_signin_button"
        android:layout_alignRight="@+id/facebook_signin_button"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="-67dp"
        android:layout_marginEnd="133dp"
        android:layout_marginRight="133dp"
        android:src="@drawable/google" />


    <ImageView
        android:id="@+id/facebook_signin_button"
        android:layout_width="69dp"
        android:layout_height="68dp"
        android:layout_alignStart="@+id/text"
        android:layout_alignLeft="@+id/text"

        android:layout_alignTop="@+id/text"
        android:layout_alignEnd="@+id/text"
        android:layout_alignRight="@+id/text"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="-55dp"
        android:layout_marginRight="-55dp"
        android:src="@drawable/facebook" />


</RelativeLayout>

